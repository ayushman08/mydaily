<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/incident_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/dp10"
                android:text="Date"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/uploaded_images"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp120">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_incident_iv"
                        android:layout_width="@dimen/dp90"
                        android:layout_height="@dimen/dp90"
                        android:layout_margin="@dimen/dp10"
                        android:background="@drawable/button_active"
                        android:padding="@dimen/dp25"
                        android:src="@drawable/ic_add" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.smartdata.utils.RoundRectCornerImageView
                            android:id="@+id/incident_image_view1"
                            android:layout_width="@dimen/dp90"
                            android:layout_height="@dimen/dp90"
                            android:layout_margin="@dimen/dp10"
                            android:background="@drawable/rounded_gray_background"
                            android:padding="@dimen/dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_insert_photo" />

                        <ProgressBar
                            android:id="@+id/progress_bar1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/custom_progress"
                            android:visibility="gone" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.smartdata.utils.RoundRectCornerImageView
                            android:id="@+id/incident_image_view2"
                            android:layout_width="@dimen/dp90"
                            android:layout_height="@dimen/dp90"
                            android:layout_margin="@dimen/dp10"
                            android:background="@drawable/rounded_gray_background"
                            android:padding="@dimen/dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_insert_photo" />

                        <ProgressBar
                            android:id="@+id/progress_bar2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/custom_progress"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.smartdata.utils.RoundRectCornerImageView
                            android:id="@+id/incident_image_view3"
                            android:layout_width="@dimen/dp90"
                            android:layout_height="@dimen/dp90"
                            android:layout_margin="@dimen/dp10"
                            android:background="@drawable/rounded_gray_background"
                            android:padding="@dimen/dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_insert_photo" />

                        <ProgressBar
                            android:id="@+id/progress_bar3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/custom_progress"
                            android:visibility="gone" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.smartdata.utils.RoundRectCornerImageView
                            android:id="@+id/incident_image_view4"
                            android:layout_width="@dimen/dp90"
                            android:layout_height="@dimen/dp90"
                            android:layout_margin="@dimen/dp10"
                            android:background="@drawable/rounded_gray_background"
                            android:padding="@dimen/dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_insert_photo" />

                        <ProgressBar
                            android:id="@+id/progress_bar4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/custom_progress"
                            android:visibility="gone" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <com.smartdata.utils.RoundRectCornerImageView
                            android:id="@+id/incident_image_view5"
                            android:layout_width="@dimen/dp90"
                            android:layout_height="@dimen/dp90"
                            android:layout_margin="@dimen/dp10"
                            android:background="@drawable/rounded_gray_background"
                            android:padding="@dimen/dp20"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_insert_photo" />

                        <ProgressBar
                            android:id="@+id/progress_bar5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:indeterminateDrawable="@drawable/custom_progress"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/job_selection_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/bottom_gray_line_background"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/job"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gps_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/bottom_gray_line_background"
                android:drawableEnd="@drawable/gps"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/gps_data_hint"
                android:textSize="16sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/what_was_damaged"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/what_damage_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="1"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/who_owns_it"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/who_owns_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="1"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/damage_address"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.smartdata.utils.CustomAutoCompleteTextview
                    android:id="@+id/address_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:textSize="@dimen/sp18"
                    app:theme="@style/MyEditTextTheme" />

                <ProgressBar
                    android:id="@+id/search_bar"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:indeterminateDrawable="@drawable/custom_progress"
                    android:visibility="gone" />
            </LinearLayout>

            <!--<EditText
                android:id="@+id/address_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/gray_text_color"
                android:gravity="left"
                android:maxLines="1"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/ticket_number"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/ticket_number_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="@string/ticket_validation"
                android:gravity="left"
                android:inputType="number"
                android:maxLines="1"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:theme="@style/MyEditTextTheme" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/was_it_our_fault"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/our_fault_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bottom_gray_line_background"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/how_far_off_the_mark_was_it"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/mark_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:inputType="text"
                android:maxLines="1"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:theme="@style/MyEditTextTheme" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/When_did_it_happen"
                android:textAllCaps="true"
                android:textColor="@color/gray_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:background="@drawable/bottom_gray_line_background"
                android:drawableEnd="@drawable/cal"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/notes_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:layout_weight="1"
                android:gravity="left"
                android:hint="@string/notes"
                android:maxLines="8"
                android:padding="@dimen/dp10"
                android:textSize="16sp"
                android:theme="@style/MyEditTextTheme" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_new_incident_Button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/button_disable"
                android:gravity="center"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>