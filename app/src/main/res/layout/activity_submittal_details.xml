<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/bottom_gray_line_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daily_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="Date"
                    android:textColor="@color/gray_text_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/job_id_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="@dimen/dp10"
                    android:textColor="@color/gray_text_color"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/job_selection_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/bottom_gray_line_background"
                android:drawableEnd="@drawable/down_arrow"
                android:gravity="left"
                android:padding="@dimen/dp10"
                android:text="@string/job"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/daily_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="@string/uploaded_images"
                    android:textColor="@color/gray_text_color"
                    android:textSize="16sp" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp120">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_image_iv"
                            android:layout_width="@dimen/dp90"
                            android:layout_height="@dimen/dp90"
                            android:layout_margin="@dimen/dp10"
                            android:background="@drawable/button_active"
                            android:padding="@dimen/dp25"
                            android:src="@drawable/ic_add" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.smartdata.utils.RoundRectCornerImageView
                                android:id="@+id/imageView1"
                                android:layout_width="@dimen/dp90"
                                android:layout_height="@dimen/dp90"
                                android:layout_margin="@dimen/dp10"
                                android:background="@drawable/rounded_gray_background"
                                android:padding="@dimen/dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_insert_photo" />

                            <ProgressBar
                                android:id="@+id/progress_bar1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:indeterminateDrawable="@drawable/custom_progress"
                                android:visibility="gone" />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.smartdata.utils.RoundRectCornerImageView
                                android:id="@+id/imageView2"
                                android:layout_width="@dimen/dp90"
                                android:layout_height="@dimen/dp90"
                                android:layout_margin="@dimen/dp10"
                                android:background="@drawable/rounded_gray_background"
                                android:padding="@dimen/dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_insert_photo" />

                            <ProgressBar
                                android:id="@+id/progress_bar2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:indeterminateDrawable="@drawable/custom_progress"
                                android:visibility="gone" />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.smartdata.utils.RoundRectCornerImageView
                                android:id="@+id/imageView3"
                                android:layout_width="@dimen/dp90"
                                android:layout_height="@dimen/dp90"
                                android:layout_margin="@dimen/dp10"
                                android:background="@drawable/rounded_gray_background"
                                android:padding="@dimen/dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_insert_photo" />

                            <ProgressBar
                                android:id="@+id/progress_bar3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:indeterminateDrawable="@drawable/custom_progress"
                                android:visibility="gone" />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.smartdata.utils.RoundRectCornerImageView
                                android:id="@+id/imageView4"
                                android:layout_width="@dimen/dp90"
                                android:layout_height="@dimen/dp90"
                                android:layout_margin="@dimen/dp10"
                                android:background="@drawable/rounded_gray_background"
                                android:padding="@dimen/dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_insert_photo" />

                            <ProgressBar
                                android:id="@+id/progress_bar4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:indeterminateDrawable="@drawable/custom_progress"
                                android:visibility="gone" />


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.smartdata.utils.RoundRectCornerImageView
                                android:id="@+id/imageView5"
                                android:layout_width="@dimen/dp90"
                                android:layout_height="@dimen/dp90"
                                android:layout_margin="@dimen/dp10"
                                android:background="@drawable/rounded_gray_background"
                                android:padding="@dimen/dp20"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_insert_photo" />

                            <ProgressBar
                                android:id="@+id/progress_bar5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center"
                                android:indeterminateDrawable="@drawable/custom_progress"
                                android:visibility="gone" />


                        </FrameLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="@string/job_information"
                    android:textAllCaps="true"
                    android:textColor="@color/gray_text_color"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/gps_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:drawableEnd="@drawable/gps"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="@string/gps_data_hint"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/supervisor_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="@string/select_supervisor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/crew_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="@string/select_operator"
                    android:textSize="16sp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="N/A"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/job_map_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:gravity="left"
                    android:hint="@string/map"
                    android:inputType="text"
                    android:padding="@dimen/dp10"
                    android:textSize="16sp"
                    android:theme="@style/MyEditTextTheme" />

                <TextView
                    android:id="@+id/job_location_ticket_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:digits="@string/mark_validation"
                    android:gravity="left"
                    android:hint="@string/locate_tickets"
                    android:inputType="number"
                    android:padding="@dimen/dp10"
                    android:textSize="16sp"
                    android:theme="@style/MyEditTextTheme" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/work_date_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/bottom_gray_line_background"
                        android:drawableEnd="@drawable/cal_16"
                        android:gravity="left"
                        android:padding="@dimen/dp10"
                        android:text="@string/work_date"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:padding="@dimen/dp1"
                        android:text="@string/to"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/to_work_date_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:background="@drawable/bottom_gray_line_background"
                        android:drawableEnd="@drawable/cal_16"
                        android:gravity="left"
                        android:padding="@dimen/dp10"
                        android:text="@string/work_date"
                        android:textSize="@dimen/sp12" />
                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_weight="1"
                    android:background="@drawable/bottom_gray_line_background"
                    android:gravity="left"
                    android:padding="@dimen/dp10"
                    android:text="@string/production"
                    android:textAllCaps="true"
                    android:textColor="@color/gray_text_color"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/production_item_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_gray_line_background"
                        android:drawableEnd="@drawable/down_arrow"
                        android:gravity="left"
                        android:paddingBottom="18dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:text="@string/items"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/product_quantity_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_gray_line_background"
                        android:gravity="left"
                        android:hint="@string/quantity"
                        android:inputType="number"
                        android:paddingBottom="18dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:textSize="16sp"
                        android:theme="@style/MyEditTextTheme" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/production_ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/production_item_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_gray_line_background"
                        android:drawableEnd="@drawable/down_arrow"
                        android:gravity="left"
                        android:paddingBottom="18dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:text="@string/items"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/product_quantity_et1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_gray_line_background"
                        android:gravity="left"
                        android:hint="@string/quantity"
                        android:inputType="number"
                        android:paddingBottom="18dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:textSize="16sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/production_ll2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/production_item_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_gray_line_background"
                        android:drawableEnd="@drawable/down_arrow"
                        android:gravity="left"
                        android:paddingBottom="18dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:text="@string/items"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/product_quantity_et2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_gray_line_background"
                        android:gravity="left"
                        android:hint="@string/quantity"
                        android:inputType="number"
                        android:paddingBottom="18dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:textSize="16sp"
                        android:theme="@style/MyEditTextTheme" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/notes_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1"
                android:background="@drawable/bottom_gray_line_background"
                android:gravity="left"
                android:hint="@string/notes"
                android:maxLines="3"
                android:padding="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:theme="@style/MyEditTextTheme" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/acceptButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/button_active"
                android:gravity="center"
                android:text="@string/accept"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/rejectButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp70"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/button_reject"
                android:gravity="center"
                android:text="@string/reject"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp20" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>