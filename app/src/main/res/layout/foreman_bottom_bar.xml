<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/foreman_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/foreman_dailies_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foreman_dailies_iv"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp2"
                android:scaleType="center"
                android:src="@drawable/ic_action_dailies" />

            <TextView
                android:id="@+id/foreman_dailies_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/dailies"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/foreman_jobs_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foreman_jobs_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_action_jobs" />

            <TextView
                android:id="@+id/foreman_jobs_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/jobs"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/foreman_add_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foreman_add_iv"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginRight="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:clickable="true"
                android:src="@drawable/ic_action_add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/foreman_incidents_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foreman_incidents_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/dp2"
                android:scaleType="center"
                android:src="@drawable/ic_action_incidents" />

            <TextView
                android:id="@+id/foreman_incidents_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/incidents"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/foreman_crews_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/foreman_crews_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_action_crews" />

            <TextView
                android:id="@+id/foreman_crews_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/crews"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>