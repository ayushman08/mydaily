<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp5"
    android:background="?android:selectableItemBackground"
    android:elevation="@dimen/dp2"
    android:orientation="horizontal"
    android:padding="@dimen/dp10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginTop="@dimen/dp5"
            android:focusable="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/superwiser_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="3"

                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/reject_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp18"

                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/draft_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:textAllCaps="true"

                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/sp18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/job_id_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp5"
                    android:gravity="right"
                    android:maxLines="1"

                    android:textColor="@color/gray_text_color"
                    android:textSize="@dimen/sp17"
                    android:textStyle="normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="3"

                android:maxLines="1"
                android:textAllCaps="true"
                android:textColor="@color/charcoal_black"
                android:textSize="@dimen/sp18"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/user_location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1"
                android:maxLines="1"
                android:textSize="@dimen/sp18"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/user_job_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:layout_marginTop="@dimen/dp10"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/gray_text_color"
                android:textSize="@dimen/sp18"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
